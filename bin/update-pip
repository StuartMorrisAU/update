#!/bin/sh
set -euf

# pip: Python package installer
for python in "python" "python3"; do
    if command -v "$python" >/dev/null 2>&1; then    
        $UPDATE $python -m pip install --upgrade pip
        $UPDATE $python -m pip install --upgrade setuptools
    fi
done
for pip in "pip" "pip3"; do
    if command -v "$pip" >/dev/null 2>&1; then    
        $UPDATE $pip install --upgrade pip
        $UPDATE $pip install --upgrade setuptools
        $UPDATE $pip freeze --local | sed -n 's/==.*//p' | xargs -n1 -I{} $pip install --upgrade "{}"
    fi
done

#!/bin/sh
set -euf
${UPDATE:=}

# NPM: Node Package Manager
if command -v npm >/dev/null 2>&1; then
    $UPDATE npm install -g npm
    $UPDATE npm update -g
    # Via local
    $UPDATE npm install npm
    $UPDATE npm update
    # Via manager
    if command -v n >/dev/null 2>&1; then
        $UPDATE n stable
        $UPDATE npm update -g
        $UPDATE npm update
    fi
fi

#!/bin/sh
set -euf

# Helpers https://github.com/sixarm/unix-shell-script-kit
. "$(dirname "$(readlink -f "$0")")/unix-shell-script-kit"

# NPM: Node Package Manager
if command_exists npm; then
    npm install -g npm
    npm update -g
    # Via local
    npm install npm
    npm update
    # Via manager
    if command_exists n; then
        n stable
        npm update -g
        npm update
    fi
fi

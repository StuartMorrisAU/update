#!/bin/sh
set -euf

# Gemfile by using the `gem` package manager
if command -v gem >/dev/null 2>&1; then
    if [[ $(whoami) != "root" ]]; then
        dir="${XDG_CONFIG_HOME:-$HOME/.config}/gem"
        if [ -r "$dir" -a -r "$dir/Gemfile" ]; then
            (cd "$dir"; bundle install )
        fi
    fi
fi
